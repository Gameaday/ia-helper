<?xml version="1.0" encoding="utf-8"?>
<!-- Network Security Configuration for Staging -->
<network-security-config>
    <domain-config cleartextTrafficPermitted="false">
        <!-- Internet Archive domains -->
        <domain includeSubdomains="true">archive.org</domain>
        <domain includeSubdomains="true">web.archive.org</domain>
        <domain includeSubdomains="true">ia600000.us.archive.org</domain>
        <domain includeSubdomains="true">ia800000.us.archive.org</domain>
        <domain includeSubdomains="true">ia900000.us.archive.org</domain>
        <domain includeSubdomains="true">ia-items-proxied.archive.org</domain>
        <domain includeSubdomains="true">ia-download.archive.org</domain>
        
        <!-- Allow staging/test servers if needed -->
        <domain includeSubdomains="true">staging.archive.org</domain>
        <domain includeSubdomains="true">test.archive.org</domain>
    </domain-config>
    
    <!-- Moderate security for staging -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>